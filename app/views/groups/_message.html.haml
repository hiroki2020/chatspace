.message
  .message__upper-info
    .message__upper-info__talker 
      = @messages
    %p.message__upper-info__date 
    = @group.created_at.strftime("%Y/%m/%d %H:%M") 
    %P.message__text 
      - if @group.name.present?
        %p.message__text__content
          = @group.name
      =image_tag @messages.image, class: 'message__text__image' if @group.name.present?